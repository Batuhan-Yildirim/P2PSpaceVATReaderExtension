{
  "manifest_version": 3,
  "name": "Vat Reader",
  "version": "1.0",
  "description": "A Chrome extension for VAT Reader",
  "author": "Batuhan YILDIRIM",
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "image/icon.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "Vat_Formats/extractors.js",
        "scripts/tesseract.min.js",
        "image/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "image/icon.png",
    "48": "image/icon.png",
    "128": "image/icon.png"
  }
}